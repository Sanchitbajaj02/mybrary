<h2>Search Authors</h2>

<form action="/authors" method="GET">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="<%= searchOpt.name %>">
  <button type="submit">Search</button>
</form>

<div>
  <% authors.forEach(author=> { %>

    <div>
      <%= author.name %>
    </div>

    <%}) %>
</div>