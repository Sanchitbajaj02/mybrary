<h2>Search Books</h2>

<form action="/books" method="GET">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= searchOpt.title %>" />
  </div>

  <div class="form-group">
    <label for="publishedAfter">Published After</label>
    <input
      type="date"
      name="publishedAfter"
      id="publishedAfter"
      value="<%= searchOpt.publishedAfter %>"
    />
  </div>

  <div class="form-group">
    <label for="publishedBefore">Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      id="publishedBefore"
      value="<%= searchOpt.publishedBefore %>"
    />
  </div>

  <button type="submit">Search</button>
</form>

<br />
<h3>All books</h3>
<div>
  <% books.forEach(book=> { %>
  <a href="/books/<%= book.id %> ">
    <img
      src="<%= book.coverImagePath %> "
      alt="<%= book.title %>"
      height="200"
      width="150"
    />
  </a>
  <%}) %>
</div>
